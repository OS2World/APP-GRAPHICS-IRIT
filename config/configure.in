	AC_LANG_PROGRAM([[]],[[char *p = "This is" "one string";]]),
	AC_MSG_RESULT([yes]),
	AC_DEFINE([NO_CONCAT_STR], [], [C compiler does not support string concat])
	AC_MSG_RESULT([no])
)

