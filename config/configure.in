AC_COMPILE_IFELSE(
	AC_LANG_PROGRAM([[]],[[void* x;]]),
	AC_MSG_RESULT([yes]),
	AC_DEFINE([NO_VOID_PTR], [], [C compiler does not support (void *)])
	AC_MSG_RESULT([no])
)

AC_MSG_CHECKING([string concat available])
